<% if !user_signed_in? %>

    <li><%= link_to "Sign in", new_user_session_path %></li>
    <li><%= link_to "Sign up", new_user_registration_path %></li>

<% else %>

    <li class="<%= is_active?(projects_path) %>"><%= link_to 'Projects', projects_path %></li>
    <li class="<%= is_active?(edit_user_registration_path) %>"><%= link_to "Account", edit_user_registration_path %></li>
    <% if current_user.admin? %>
        <li class="<%= is_active?(admin_root_path) %>"><%= link_to "Admin", admin_root_path %></li>
    <% end %>
    <li><%= link_to "Sign out", destroy_user_session_path, data:{method: :delete} %></li>

<% end %>

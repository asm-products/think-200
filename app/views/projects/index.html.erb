<div class="row">
    <div class="col-sm-2">
        <%= link_to(glyphicon('plus') + ' New Project', new_project_path) %>
    </div>

    <div class="col-sm-10 cards">
        <header>
            <h1>All Projects</h1>
        </header>

        <div class="row">
          <%= render partial: 'tile', collection: @failed_projects %>
          <%= render partial: 'tile', collection: @passed_projects %>
        </div>

        <div class="row">
          <%= render partial: 'tile', collection: @unfinished_projects %>
        </div>
    </div>
</div>
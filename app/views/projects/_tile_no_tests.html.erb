<% 
  panel_class = 'panel-warning'
  column_class = 'col-md-3 col-sm-4'

  glyph = case tile.passed?
  when nil  # No tests
    'question-sign'
  when true # Tests all pass
    'ok'
  else
    'fire' 
  end
%>

<div class="<%= column_class %>">
  <div class="panel <%= panel_class %> project-tile" data-url="<%= project_path(tile) %>" data-class="<%= panel_class %>">
    <div class="panel-heading">
      <h3 class="panel-title">
          
        <% if tile.passed? == false %>
          <span class="label label-danger"><%= tile.failing_requirements.count %></span>
        <% else %>
          <%= glyphicon(glyph) %>
        <% end %>
        <%= tile.name %>
      </h3>
    </div>
    <div class="panel-body">
    </div>
  </div>
</div>
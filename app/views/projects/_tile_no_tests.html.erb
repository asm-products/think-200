<% 
  panel_class  = 'panel-default'
  column_class = tile_col_class
  icon         = 'fa-minus'
%>

<div class="<%= column_class %>">
  <div class="panel <%= panel_class %> project-tile" data-url="<%= project_path(tile) %>" data-class="<%= panel_class %>">
    <div class="panel-heading">
      <h3 class="panel-title">
	<span id="icon-<%= tile.id %>" class="fa fa-fw <%= icon %>" data-icon-class="<%= icon %>"></span>
        <%= tile.name %>
      </h3>
    </div>
    <div class="panel-body">
      Add some tests to get started
    </div>
  </div>
</div>

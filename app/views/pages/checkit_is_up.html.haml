.row
  .col-sm-offset-1.col-sm-10
    .page-header
      %h1.text-center
        #{@user_input.gsub(%r[^https?://],'')} is up
        = passed_icon
        %br
        %small
          Congratulations, you have your first passing test

.row
  .col-sm-offset-2.col-sm-8
    %row
      .col-sm-8
        %p.lead
          = expectation_to_html(@expectation)
      .col-sm-4
        %p
          = @expectation.matcher.summary
    %row
      .col-sm-offset-3.col-sm-6
        %p 
          %button.btn.btn-default.btn-lg.btn-block.btn-success
            Save and monitor


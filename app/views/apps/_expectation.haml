.row
  .col-sm-11
    %p.expectation-row{class: 'bg-'+status_class_for(exp)}
      =# fa_icon(exp.matcher.icon, 'fa-lg fa-fw')
      %strong= exp.subject
      %span.text-semi-muted should
      = exp.matcher
      %strong= exp.expected
  .col-sm-1
    .pull-right
      = subtle_button(icon_class: delete_icon_class, href: exp, method: :delete)

- if ! exp.actual_message.blank?
  .row
    .col-sm-11
      .actual-message-row
        = status_icon_for(exp)
        = exp.actual_message
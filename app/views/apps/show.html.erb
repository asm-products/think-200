<ol class="breadcrumb">
  <li><%= link_to 'Projects', projects_path %></li>
  <li><%= link_to @app.project.name, @app.project %></li>
  <li class="active"><%= @app.name %></li>
</ol>


<p id="notice"><%= notice %></p>

<h1><%= @app.project.name + ' ' + @app.name %> <%= status_icon_for(@app) %></h1>

<%= link_button 'Re-test', 'btn-primary', retest_project_path(@app.project.id) %>
<%= link_button 'Edit',    'btn-default', edit_app_path(@app) %>


<h2 class="text-muted">Requirements</h2>


<ul>
    <% @app.requirements.each do |r| %>
        <li>
            it <strong><%= r %></strong>: <%= status_icon_for(r) %>
            <ul>
                <% r.expectations.each do |expectation| %>
                    <li>
                        <strong>
                            <%= expectation.subject %>
                        </strong>
                        should
                        <span class="text-warning">
                          <%= expectation.matcher %>
                        </span>
                        <strong>
                            <%= expectation.expected %>
                        </strong>     
                        <%= status_icon_for(expectation) %>
                    </li>
                <% end %>
            </ul>
        </li>
    <% end %>
</ul>

